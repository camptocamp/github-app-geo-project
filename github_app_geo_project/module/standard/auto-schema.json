      "properties": {
        "conditions": {
          "type": "array",
          "title": "Conditions",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "author": {
                "type": "string",
                "title": "Author regex",
                "description": "The author of the pull request"
              },
              "branch": {
                "type": "string",
                "title": "Branch regex",
                "description": "Regex to match the branch of the pull request"
              },
              "title": {
                "type": "string",
                "title": "Title regex",
                "description": "Regex to match the title of the pull request"
