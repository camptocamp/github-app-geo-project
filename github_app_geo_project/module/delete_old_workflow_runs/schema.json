{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/camptocamp/github-app-geo-project/master/github_app_geo_project/module/delete_old_workflow_runs/schema.json",
  "type": "object",
  "title": "Delete old workflow runs configuration",
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "title": "Rule",
        "description": "A rule to filter the list of workflow runs",
        "type": "object",
        "properties": {
          "older-than-days": {
            "type": "integer"
          },
          "workflow": {
            "type": "string"
          },
          "actor": {
            "type": "string"
          },
          "branch": {
            "type": "string"
          },
          "event": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "completed",
              "action_required",
              "cancelled",
              "failure",
              "neutral",
              "skipped",
              "stale",
              "success",
              "timed_out",
              "in_progress",
              "queued",
              "requested",
              "waiting",
              "pending"
            ]
          }
        },
        "required": ["older-than-days"]
      }
    }
  }
}
